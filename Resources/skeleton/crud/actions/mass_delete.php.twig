
    /**
    * Mass delete {{ entity }} entities.
    *
    * @param array $ids
    */
    public function massDeleteAction($ids)
    {
        foreach ($ids as $id) {
            $allergen = $this->{{ entity_var }}Repository->find($id);
            $this->getEm()->remove($allergen);
        }

        $this->getEm()->flush();

        $this->addFlashSuccess($this->get('translator')->trans('Items deleted successfully.'));
    }
