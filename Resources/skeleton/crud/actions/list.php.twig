
    /**
     * Lists all {{ entity }} entities.
     *
     * @return Response
     */
    public function listAction()
    {
        $entities = $this->getEm()->getRepository('{{ namespace|replace({'\\': ''}) ~ ':' ~ entity|replace({'\\': '/'}) }}'){% if 'order' in actions %}->findBy(array(), array('ordering' => 'ASC')){% else %}->findAll(){% endif %};

        return $this->render('{{ namespace|replace({'\\': ''}) ~ ':' ~ application ~ '/' ~ entity_class ~ '/' ~ entity|replace({'\\': '/'}) }}:list.html.twig', array(
            'entities' => $entities
        ));
    }
