{% if apps|length > 1 or is_granted('ROLE_DEVELOPER') %}
    <li>
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {% trans %}Application{% endtrans %}
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                {% for application in apps %}
                    <li>
                        <a href="{{ path('unifik_system_backend_switch_managed_app', { appSlug: application.slug }) }}"{% if application.id == appCurrent.id %} class="selected"{% endif %}>
                            {{ application|capitalize|trans }}
                        </a>
                    </li>
                {% endfor %}
                {% if is_granted('ROLE_DEVELOPER') %}
                    <li>
                        <a href="{{ path('unifik_system_backend_application_edit') }}">
                            <i class="glyphicon glyphicon-plus"></i> {% trans %}New Application{% endtrans %}
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </li>
{% endif %}
