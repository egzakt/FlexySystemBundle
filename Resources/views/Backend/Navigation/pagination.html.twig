{% if pageCount > 1 %}
    {% if first is defined and current != first %}
        <a class="first btn btn-xs btn-default" href="{{ path(route, query|merge({(pageParameterName): first})) }}"><i class="fa fa-fast-backward"></i></a>
    {% endif %}

    {% if previous is defined %}
        <a class="previous btn btn-xs btn-default" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><i class="fa fa-backward"></i></a>
    {% endif %}

    {% for page in pagesInRange %}
        {% if pageCount > pageRange and page == current %}
            <div class="btn-group">
                <button class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown" type="button">
                    {{ page }} <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    {% for i in 1..pageCount %}
                        <li><a href="{{ path(route, query|merge({(pageParameterName): i})) }}">{{ i }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        {% elseif page == current %}
            <a class="btn btn-xs btn-darkblue" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
        {% else %}
            <a class="btn btn-xs btn-default" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
        {% endif %}
    {% endfor %}

    {% if next is defined %}
        <a class="next btn btn-xs btn-default" href="{{ path(route, query|merge({(pageParameterName): next})) }}"><i class="fa fa-forward"></i></a>
    {% endif %}

    {% if last is defined and current != last %}
        <a class="last btn btn-xs btn-default" href="{{ path(route, query|merge({(pageParameterName): last})) }}"><i class="fa fa-fast-forward"></i></a>
    {% endif %}
{% endif %}