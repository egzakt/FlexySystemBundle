<div id="ajax">
    {% block content '' %}
</div>

<script>
    $().ready(function(){
        $('#ajax form').submit(function(){
            $(this).ajaxSubmit({
                success: showResponse
            });

            return false;
        });
    });

    function showResponse(data)
    {
        if (!data.error){
            var option = '<option selected="selected"  value="' + data.entity.id + '">'+data.entity.name+'</option>';
            $('#news_newsCategory').append(option);
            $.fancybox.close();
        }
    }
</script>