{% if cancel_route is not defined %}
    {% set cancel_route = path(entity.route) %}
{% endif %}
{% if delete_route is not defined and entity.isDeletable() %}
    {% set delete_route = path(entity.route('delete'), entity.routeParams) %}
{% endif %}

<div class="form_actions_bar">
    <ul>
        <li>
            <a href="{{ cancel_route }}">{% trans %}Cancel{% endtrans %}</a>
            {% if entity.isDeletable %}
            <span>|</span>
        </li>
        <li>
            <a href="{{ delete_route }}" onclick="return confirm('{% block delete_confirm_message %}{% trans with {'%name%': entity|trans|striptags|truncate(80, true)|escape('js')} %}Are you sure you want to delete %name%?{% endtrans %}{% endblock %}');">
                {% trans %}Delete{% endtrans %}
            </a>
            {% endif %}
        </li>
    </ul>
    <input class="save" type="submit" value="{% trans %}Save{% endtrans %}" name="save" />
    <input class="save_continue" type="submit" value="{% trans %}Save and continue{% endtrans %}" name="save_continue" />
</div>