<div class="form_actions_bar">
    {% if ajax is not defined or not ajax %}
    <ul>
        <li>
            <a href="{% if cancel_route is defined %}{{ cancel_route }}{% else %}{{ path( bundle, { 'section_id': section.id }) }}{% endif %}">{% trans %}Cancel{% endtrans %}</a>
            {% if entity.isDeletable %}
            <span>|</span>
        </li>
        <li>
            <a href="{% if delete_route is defined %}{{ delete_route }}{% else %}{{ path( entity.getRouteBackend('delete'), entity.getRouteBackendParams() ) }}{% endif %}" onclick="return confirm('{% block delete_confirm_message %}{% trans with {'%name%': entity|trans|striptags|truncate(80, true)|escape('js')} %}Are you sure you want to delete %name%?{% endtrans %}{% endblock %}');">
                {% trans %}Delete{% endtrans %}
            </a>
            {% endif %}
        </li>
    </ul>
    {% endif %}
    <input class="save" type="submit" value="{% trans %}Save{% endtrans %}" name="save" />
    {% if ajax is not defined or not ajax %}
        <input class="save_continue" type="submit" value="{% trans %}Save and continue{% endtrans %}" name="save_continue" />
    {% endif %}
</div>