{% extends 'FlexySystemBundle:Backend/User:layout.html.twig' %}
{% form_theme form 'FlexySystemBundle:Backend/Core:edit_fields.html.twig' %}

{% block content_header %}
    <h1>{{ user|trans }}</h1>
{% endblock %}

{% block content_main %}

    <form novalidate="novalidate" method="post" {{ form_enctype(form) }}>

        {% block edit_action %}
            {% include 'FlexySystemBundle:Backend/Core:edit_actions.html.twig' with {
                'entity': user,
                'delete_route': path('flexy_system_backend_user_delete', { 'id': user.id ? user.id : 0 }),
                'delete_message_route': path('flexy_system_backend_user_delete', { 'id': user.id ? user.id : 0, 'message': true }),
                'cancel_route': path('flexy_system_backend_user')
            } %}
        {% endblock %}

        <div id="fields_box">
            <table class="fields" cellspacing="0">

                {{ form_errors(form) }}

                {{ form_row(form.active) }}
                {{ form_row(form.username) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                {{ form_row(form.userRoles) }}

                {{ form_rest(form) }}

                {% if user.id %}
                    <tr>
                        <th>
                            {% trans %}Last update {% endtrans %} :
                        </th>
                        <td style="vertical-align:bottom">
                            {{ user.updatedAt|date }}
                        </td>
                    </tr>
                {% endif %}

            </table>
        </div>

        {{ block('edit_action') }}

    </form>

{% endblock content_main %}
