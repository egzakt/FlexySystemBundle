<table class="table-autosort table table-striped">
    <thead>
        <tr>
            <th class="name table-sortable:ignorecase">
                {% trans %}Name{% endtrans %}
            </th>
            <th class="table-sortable:numeric">
                {% trans %}Nb. of subsections{% endtrans %}
            </th>
            <th class=" table-sortable:date">
                {% trans %}Last update{% endtrans %}
            </th>
            {% if navigation.name == 'floating' %}
                <th class="edit">
                    &nbsp;
                </th>
            {% else %}
                <th class="default_ordering  table-sortable:numeric">
                    {% trans %}Ordering{% endtrans %}
                </th>
                <th class="switch_list_mode">
                    <a href="#"><img src="{{ asset("bundles/unifiksystem/backend/images/buttons/switch_list_mode_off.gif") }}" width="20" height="20" alt="" /></a>
                </th>
            {% endif %}
        </tr>
        <tr class="filters">
            <th class="name">
                <input onkeyup="Table.filter(this,this)" class="filter" alt="{{ "Search a name"|trans }}" />
            </th>
            <th>
                &nbsp;
            </th>
            <th class="default_ordering">
                &nbsp;
            </th>
            <th>
                &nbsp;
            </th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr id="item_{{ navigation.id }}-{{ entity.id }}">
                <td class="name{% if not entity.active %} inactive{% endif %}">
                    <a href="{{ path('unifik_system_backend_section_root_edit', { id: entity.id, appSlug: managedApp.slug }) }}">{% include 'UnifikSystemBundle:Backend/Core:entity_title.html.twig' with { 'entity': entity } %}</a>
                </td>
                <td>
                    {{ entity.children|length }}
                </td>
                <td>
                    {{ entity.updatedAt|date('Y-m-d') }}
                </td>
                {% if navigation.name != 'floating' %}
                    <td class="default_ordering">
                        {{ entity.ordering }}
                    </td>
                {% endif %}
                <td class="table-action">
                    {% if entity.isEditable %}
                        <a class="edit" href="{{ path('unifik_system_backend_section_root_edit', { id: entity.id, appSlug: managedApp.slug }) }}" title="{% trans %}Edit{% endtrans %}">
                            <i class="fa fa-pencil"></i>
                        </a>
                    {% endif %}
                    <a class="delete" href="{{ path('unifik_system_backend_section_root_delete', { id: entity.id, appSlug: managedApp.slug }) }}" rel="{{ path('unifik_system_backend_section_root_delete', { id: entity.id, appSlug: managedApp.slug, message: true }) }}" title="{% trans %}Delete{% endtrans %}">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="total dataTables_info">
    <span class="sub-total"></span>
    {% set count = entities|length %}
    {% transchoice count %}{0} No results|{1} One result|]1,Inf] %count% results{% endtranschoice %}
</div>