<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8" />
            <title>{% block title %}{{ render(controller('FlexySystemBundle:Backend/Navigation:PageTitle')) }}{% endblock %}</title>
            {% block stylesheets %}{% include 'FlexySystemBundle:Backend/Core:stylesheets.html.twig' %}{% endblock %}
            <link rel="icon" type="image/png" href="{{ asset('bundles/flexysystem/backend/images/icons/favicon.png') }}" />
            {% block jquery %}
                <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
                <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
            {% endblock %}
        {% endblock head %}
    </head>
    <body {% block body_attr '' %}>
        {% block body %}

            <div id="loading"><img src="{{ asset('bundles/flexysystem/backend/images/icons/ajax-loader.gif') }}" width="32" height="32" alt="" /></div>

            {% include 'FlexySystemBundle:Backend/Core:delete.html.twig' %}

            {% block header %}
                {% include 'FlexySystemBundle:Backend/Core:header.html.twig' %}
            {% endblock %}

            {% block top_bar %}
                <div id="login_bar">
                    {% if app.user %}
                        {% block login_nav %}
                            {% include 'FlexySystemBundle:Backend/Navigation:header.html.twig'%}
                        {% endblock %}
                    {% endif %}
                    <h6>{% trans %}Content Management System (CMS){% endtrans %}</h6>
                </div>
            {% endblock %}

            {% block wrapper %}
                <div id="cols_wrapper">

                    <div id="navigation_col">
                        {% block section_bar %}
                            {{ render(controller('FlexySystemBundle:Backend/Navigation:SectionBar')) }}
                        {% endblock %}

                        {% block app_module_bar %}
                            {{ render(controller('FlexySystemBundle:Backend/Navigation:AppModuleBar')) }}
                        {% endblock %}

                        {% block global_module_bar %}
                            {{ render(controller('FlexySystemBundle:Backend/Navigation:GlobalModuleBar')) }}
                        {% endblock %}
                    </div>

                    <div id="main_col">
                        {% block breadcrumbs %}
                            {{ render(controller('FlexySystemBundle:Backend/Navigation:Breadcrumbs')) }}
                        {% endblock %}

                        {% block section_module_bar %}
                            {{ render(controller('FlexySystemBundle:Backend/Navigation:SectionModuleBar')) }}
                        {% endblock %}

                        {% block content '' %}
                    </div>

                    <div style="clear:both;"></div>
                    <div id="flexy">
                        {% trans %}Developed by{% endtrans %}
                        <a target="_blank" href="http://www.egzakt.com">
                            <img width="56" height="20" title="Egzakt" alt="Egzakt" src="{{ asset('bundles/flexysystem/backend/images/graphics/egzakt_logo.png') }}">
                        </a>
                    </div>

                </div>
            {% endblock %}

        {% endblock %}

        {% block javascripts %}
            {% include 'FlexySystemBundle:Backend/Core:javascripts.html.twig' %}
        {% endblock %}

    </body>
</html>