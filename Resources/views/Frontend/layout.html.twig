<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        {% block head %}
            <meta charset="utf-8" />
            <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

            <title>{% block title %}{{ render(controller('UnifikSystemBundle:Frontend/Navigation:PageTitle')) }}{% endblock %}</title>

            {% block metas %}
                {% include 'UnifikSystemBundle:Frontend/Core:metas.html.twig' %}
                {% include 'UnifikSystemBundle:Frontend/Core:open_graph_metas.html.twig' %}
            {% endblock %}

            {% block stylesheets %}{% include 'UnifikSystemBundle:Frontend/Core:stylesheets.html.twig' %}{% endblock %}

            <link rel="icon" type="image/png" href="{{ asset('favicon.ico') }}" />

            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/jquery-ui.min.js"></script>

            {% block head_extra %}{{ render(controller('UnifikSystemBundle:Frontend/Core:HeadExtra')) }}{% endblock %}
        {% endblock %}
    </head>

    <body{% block body_attr %} id="{# get_bundle_name() #}_bundle" class="{# get_controller_name() #}_controller {# get_action_name() #}_action"{% endblock %}>
        {% block body %}

            <div id="wrapper">

                <header id="site_header">
                    {{ render(controller('UnifikSystemBundle:Frontend/Navigation:LocaleSwitcher')) }}
                    {{ render(controller('UnifikSystemBundle:Frontend/Navigation:ByCode', { code: 'secondary', attr: { id: 'secondary_navigation' } })) }}

                    {% block logo %}
                        <div id="logo">
                            <a href="{{ path('section_id_1') }}">{{ project_title }}</a>
                        </div>
                    {% endblock %}
                </header>

                {{ render(controller('UnifikSystemBundle:Frontend/Navigation:ByCode', { code: 'primary', maxLevel: 1, attr: { id: 'primary_navigation'} })) }}

                {% block main %}
                    <div id="main" role="main" class="clearfix">

                        <div id="nav_col">
                            {% block nav_col %}
                                {# TODO: sub-navigation #}
                            {% endblock %}
                        </div>

                        <div id="content_col">
                            {% block breadcrumbs %}{{ render(controller('UnifikSystemBundle:Frontend/Navigation:Breadcrumbs')) }}{% endblock %}

                            {% block content %}
                                {% block content_top %}
                                    <article>
                                        <aside id="actions">
                                            <a href="#" class="print_link">{% trans %}Print{% endtrans %}</a>
                                        </aside>

                                        <header id="section_header">
                                            {% block section_header %}
                                                <h1 class="title_level1">{{ section }}</h1>
                                            {% endblock %}
                                        </header>
                                {% endblock %}

                                {% block content_main %}{% endblock %}

                                {% block content_bottom %}
                                    </article>
                                {% endblock %}
                            {% endblock %}
                        </div>
                    </div>
                {% endblock %}

                <footer id="site_footer">
                    {{ render(controller('UnifikSystemBundle:Frontend/Navigation:ByCode', { code: 'footer', attr: { id: 'footer_navigation' } })) }}
                </footer>
            </div>

            {% block javascripts %}
                {% include 'UnifikSystemBundle:Frontend/Core:javascripts.html.twig' %}
            {% endblock %}

            {% block analytics %}
                {% include 'UnifikSystemBundle:Frontend/Core:analytics.html.twig' %}
            {% endblock %}
        {% endblock %}
    </body>
</html>
