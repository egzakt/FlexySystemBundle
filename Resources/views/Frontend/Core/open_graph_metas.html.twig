{% block og %}

    {% block og_title %}
        <meta property="og:title" content="{{ render(controller('UnifikSystemBundle:Frontend/Navigation:pageTitle')) }}" />
    {% endblock %}

    {% block og_type %}
        <meta property="og:type" content="website" />
    {% endblock %}

    {% block og_url %}
        <meta property="og:url" content="{{ app.request.uri }}" />
    {% endblock %}

    {% block og_image %}
        <meta property="og:image" content="http://{{ app.request.host }}{{ asset('bundles/unifiksystem/frontend/images/og-img.png') }}" />
    {% endblock %}

    {% block og_description %}
        {{ render_esi(controller('UnifikSystemBundle:Frontend/Metadata:metadata', { metaName: 'description', ogMeta: true })) }}
    {% endblock %}

{% endblock %}
