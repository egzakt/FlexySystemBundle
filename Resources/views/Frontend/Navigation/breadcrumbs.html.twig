{% if elements %}
    <ul id="breadcrumbs">
        {# only show the home element when it's not already the parent of the current elements stack #}
        {% if elements.first.id != 1 %}
            <li>
                <a href="{{ path('section_id_1') }}">{% trans %}Home{% endtrans %}</a>
                <span>&raquo;</span>
            </li>
        {% endif %}
        {% for element in elements %}
            <li>
                {% if loop.last %}
                    <strong>{% include 'UnifikSystemBundle:Backend/Core:entity_title.html.twig' with { 'entity': element } %}</strong>
                {% else %}
                    <a href="{{ path(element.route, element.routeParams) }}">{% include 'UnifikSystemBundle:Backend/Core:entity_title.html.twig' with { 'entity': element } %}</a>
                    <span>&raquo;</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}